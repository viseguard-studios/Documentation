@startuml
hide footbox
title Ship mine from asteroid


actor Tester as Tester


participant ship as ship <<SpaceShip>>

participant a as a <<Asteroid>>

participant inv as inv<<Inventory>>

participant res as res<<Resource>>

Tester -> ship : Mine()
activate ship

ship -> a ++: Mine(ship)

a -> res++ : Mine()
res --> a--: item

a --> ship--: item

ship->inv++: InsertItem(i)
inv --> ship--: true

ship --> Tester
deactivate ship

@enduml